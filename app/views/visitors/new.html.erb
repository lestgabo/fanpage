<% content_for :title do %>Natalie Dormer<% end %>
<% content_for :description do %>Fan page for Natalie Dormer<% end %>

<div class ="container">
  <div class="row">
    <%= image_tag "NatalieDormer.jpg", height: '700', width: '400' %>
  </div>
</div>

<div class ="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h1>
        
      <%= link_to more_path, class:"hidden-link" do  %>
        Natalie Dormer.
      <br>
        Want
        more?
      <% end %>
      
      </h1>
    </div>
  </div>
</div>

<div class ="container">
  <div class="row">
    <div class="col-md-3 col-md-offset-4">
        <%= simple_form_for @visitor do |f| %>
          <%= f.error_notification %>
          <%= f.input :email, label: false, :placeholder => 'Your email address...' %>
          <%= f.button :submit, "See more Dormer!", :class => "btn btn-success" %>
        <% end %>
    </div>
  </div>
</div>

